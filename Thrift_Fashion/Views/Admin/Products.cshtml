<div class="row gsap">
    <div class="col-12">
        <div class="table-responsive">
            <div class="col-sm-12">
                <table id="order-listing" class="table dataTable no-footer" role="grid" aria-describedby="order-listing_info">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(x => x.P_ID)</th>
                            <th>@Html.DisplayNameFor(x => x.P_Name)</th>
                            <th>@Html.DisplayNameFor(x => x.P_Stock)</th>
                            <th>@Html.DisplayNameFor(x => x.P_Discount)</th>
                            <th>@Html.DisplayNameFor(x => x.P_Price)</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(x => item.P_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(x => item.P_Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(x => item.P_Stock)
                                </td>
                                <td>
                                    @Html.DisplayFor(x => item.P_Discount)
                                </td>
                                <td>
                                    @Html.DisplayFor(x => item.P_Price)
                                </td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a class="btn btn-danger" title="Delete" href="@Url.Action("RemoveProducts", "Admin", new { id = item.P_ID })">
                                            <i class="icon-trash"></i>
                                        </a>
                                        <a class="btn btn-warning" title="Edit" href="@Url.Action("EditProducts", "Admin", new { id = item.P_ID })">
                                            <i class="icon-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
