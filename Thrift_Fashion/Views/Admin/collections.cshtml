<div class="row gsap">
    <div class="col-12">
        <div class="table-responsive">
            <div class="col-sm-12">
                <table id="order-listing" class="table dataTable no-footer" role="grid" aria-describedby="order-listing_info">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(x => x.C_ID)</th>
                            <th>@Html.DisplayNameFor(x => x.C_Name)</th>
                            <th>@Html.DisplayNameFor(x => x.C_Pic)</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(x => item.C_ID)
                                </td>
                                <td>
                                    <img src="~/MainWebsite/assets/images/collection/@item.C_Pic" alt="User Profile Picture" class="rounded-circle" width="50px" height="50px" />
                                </td>
                                <td>
                                    @Html.DisplayFor(x => item.C_Name)
                                </td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a class="btn btn-danger" title="Delete" href="@Url.Action("CollectionRemove", "Admin", new { id = item.C_ID })">
                                            <i class="icon-trash"></i>
                                        </a> &nbsp;&nbsp;&nbsp;
                                        <a class="btn btn-warning" title="Edit" href="@Url.Action("CollectionEdit", "Admin", new { id = item.C_ID })">
                                            <i class="icon-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
