        <div class="tab-slider-product section">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="section-header text-center">
                            <h2 class="h2">New Arrivals</h2>
                            <p>Browse the huge variety of our products</p>
                        </div>
                        <div class="tabs-listing">
                            <ul class="tabs clearfix">
                                <li class="active" rel="tab1">Women</li>
                                <li rel="tab2">Men</li>
                                <li rel="tab3">Shoes</li>
                            </ul>
                            <div class="tab_container">
                                <div id="tab1" class="tab_content grid-products">
                                    <div class="productSlider">
                                        @{
                                            var women = ViewBag.Women;
                                            foreach (var item in women)
                                            {
                                                <div class="col-12 item">

                                                    <div class="product-image">
                                                        <a href="@Url.Action("Singlepage", "Home", new { @id = @item.P_ID })">
                                                            <img class="primary blur-up lazyload"
                                                                 data-src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                                 src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                                 alt="image" title="@item.P_Name" />
                                                            <img class="hover blur-up lazyload"
                                                                 data-src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                                 src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                                 alt="image" title="@item.P_Name" />
                                                            <div class="product-labels">
                                                                <span class="lbl on-sale">Sale</span>
                                                            </div>
                                                        </a>
                                                        <form class="variants add" action="#"
                                                              onclick="window.location.href = '@Url.Action("Singlepage", "Home", new { @id = @item.P_ID })'" method="post">
                                                            <button class="btn btn-addto-cart" type="button"
                                                                    tabindex="0">
                                                                Add To Cart
                                                            </button>
                                                        </form>
                                                    </div>
                                                    <div class="product-details text-center">
                                                        <div class="product-name">
                                                            <a href="@Url.Action("Singlepage", "Home", new { @id = @item.P_ID })">@item.P_Name</a>
                                                        </div>
                                                        <div class="product-price">
                                                            <span class="old-price">Rs @item.P_Price.00</span>
                                                            <span class="price">Rs @item.P_Discount.00</span>
                                                        </div>

                                                    </div>

                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                                <div id="tab2" class="tab_content grid-products">
                                    <div class="productSlider">
                                        @{
                                            var Men = ViewBag.Men;
                                            foreach (var item in Men)
                                            {
                                                <div class="col-12 item">

                                                    <div class="product-image">
                                                        <a href="@Url.Action("Singlepage", "Home", new { @id = @item.P_ID })">
                                                            <img class="primary blur-up lazyload"
                                                                 data-src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                                 src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                                 alt="image" title="@item.P_Name" />
                                                            <img class="hover blur-up lazyload"
                                                                 data-src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                                 src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                                 alt="image" title="@item.P_Name" />
                                                            <div class="product-labels">
                                                                <span class="lbl on-sale">Sale</span>
                                                            </div>
                                                        </a>
                                                        <form class="variants add" action="@Url.Action("Singlepage", "Home", new { @id = @item.P_ID })"
                                                              onclick="window.location.href = '@Url.Action("Singlepage", "Home", new { @id = @item.P_ID })'" method="post">
                                                            <button class="btn btn-addto-cart" type="button"
                                                                    tabindex="0">
                                                                Add To Cart
                                                            </button>
                                                        </form>
                                                    </div>
                                                    <div class="product-details text-center">
                                                        <div class="product-name">
                                                            <a href="@Url.Action("Singlepage", "Home", new { @id = @item.P_ID })">@item.P_Name</a>
                                                        </div>
                                                        <div class="product-price">
                                                            <span class="old-price">Rs @item.P_Price.00</span>
                                                            <span class="price">Rs @item.P_Discount.00</span>
                                                        </div>

                                                    </div>

                                                </div>
                                            }
                                        }
                                    </div>
                                    </div>
                                    <div id="tab3" class="tab_content grid-products">
                                        <div class="productSlider">
                                            @{
                                                var Shoes = ViewBag.Shoes;
                                                foreach (var item in Shoes)
                                                {

                                                    <div class="col-12 item">

                                                        <div class="product-image">
                                                            <a href="@Url.Action("Singlepage", "Home", new { @id = @item.P_ID })">
                                                                <img class="primary blur-up lazyload"
                                                                     data-src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                                     src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                                     alt="image" title="@item.P_Name" />
                                                                <img class="hover blur-up lazyload"
                                                                     data-src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                                     src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                                     alt="image" title="@item.P_Name" />
                                                                <div class="product-labels">
                                                                    <span class="lbl on-sale">Sale</span>
                                                                </div>
                                                            </a>
                                                            <form class="variants add" action="#"
                                                                  onclick="window.location.href = '@Url.Action("Singlepage", "Home", new { @id = @item.P_ID })'" method="post">
                                                                <button class="btn btn-addto-cart" type="button"
                                                                        tabindex="0">
                                                                    Add To Cart
                                                                </button>
                                                            </form>
                                                        </div>
                                                        <div class="product-details text-center">
                                                            <div class="product-name">
                                                                <a href="@Url.Action("Singlepage", "Home", new { @id = @item.P_ID })">@item.P_Name</a>
                                                            </div>
                                                            <div class="product-price">
                                                                <span class="old-price">Rs @item.P_Price.00</span>
                                                                <span class="price">Rs @item.P_Discount.00</span>
                                                            </div>

                                                        </div>

                                                    </div> }
                                            }
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

