@model IEnumerable<Thrift_Fashion.Models.cartapp>
@{
    double totalPrice = 0.0;
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
   
        }
<div class="page section-header text-center">
    <div class="page-title">
        <div class="wrapper"><h1 class="page-width">Checkout</h1></div>
    </div>
</div>

<div class="container">


    <div class="row billing-fields">
        <div class="col-6 sm-margin-30px-bottom">
<img src="~/ExtraClasses/new2.jpg" />
        </div>

        <div class="col-6">
            <div class="your-order-payment">
                <div class="your-order">
                    <h2 class="order-title mb-4">Your Order</h2>

                    <div class="table-responsive-sm order-table">
                        <table class="bg-white table table-bordered table-hover text-center">
                            <thead>
                                <tr>
                                    <th class="text-left">Product Name</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>



                                        <td class="text-left">@item.P_Name</td>
                                        <td>Rs @item.P_Price</td>

                                        <td>@item.qty</td>
                                        <td>Rs @item.P_Totalprice</td>

                                    </tr>
                                    totalPrice += item.P_Totalprice;
                                    Session["totalprice"] = totalPrice;
                                }

                            </tbody>
                            <tfoot class="font-weight-600">
                                <tr>
                                    <td colspan="4" class="text-right">Total</td>
                                    <td>Rs @totalPrice.00</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

                <hr />

                <div class="your-payment">
                    <h2 class="payment-title mb-3">payment method</h2>
                    <div class="payment-method">
                        <h3>Cash on delivery</h3>

                        <div class="order-button-payment">
                            <button class="btn" value="Place order" type="submit"><a href="@Url.Action("additional","home")" class="text-white" style="text-decoration:none"> Place order</a></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


