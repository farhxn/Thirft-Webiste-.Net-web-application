@model IEnumerable<Thrift_Fashion.Models.product>
@{
    ViewBag.Title = "Collections";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div id="page-content">
    <div class="collection-header">
        <div class="collection-hero">
            <div class="collection-hero__image">
                <img class="blur-up lazyload"
                     data-src="/MainWebsite/assets/images/cat-women1.jpg" src="/MainWebsite/assets/images/cat-women.jpg" alt="Women"
                     title="Women" />
            </div>
            <div class="collection-hero__title-wrapper">
                <h1 class="collection-hero__title page-width">Category</h1>
            </div>
        </div>
    </div>
<br></br>
    <div class="container">
        <div class="row">

            <div class="col-12 col-sm-12 col-md-3 col-lg-3 sidebar filterbar">
                <div class="closeFilter d-block d-md-none d-lg-none">
                    <i class="icon icon anm anm-times-l"></i>
                </div>
                <div class="sidebar_tags">

                    <div class="sidebar_widget static-banner">
                        <img src="/MainWebsite/assets/images/side-banner-2.jpg" alt="" />
                    </div>
                    <div class="sidebar_widget">
                        <div class="widget-title">
                            <h2>Information</h2>
                        </div>
                        <div class="widget-content">
                            <p>

                                With her impressive fashion sense and regularly changing hair, she is the queen of magnificent looks. Katy Perry is known for her colorful style and her cartoon-like style may surprise you every time. She never uses the same lipstick twice and she is recognized for trying out multicolored glitters and liners. Katy Perry named the Face of Moschino in 2015. Lady Gaga The talented musician Lady Gaga is famous for her showy fashion creations.
                            </p>
                        </div>
                    </div>

                    <div class="sidebar_widget">
                        <div class="widget-title">
                            <h2>Popular Products</h2>
                        </div>
                        <div class="widget-content">
                            <div class="list list-sidebar-products">
                                <div class="grid">
                                    @foreach (var item in Model)
                                    {
                                        <div class="grid__item">
                                            <div class="mini-list-item">
                                                <div class="mini-view_image">
                                                    <a class="grid-view-item__link" href="@Url.Action("Singlepage", "Home", new { @id = @item.P_ID})">
                                                        <img class="grid-view-item__image"
                                                             src="~/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                             alt="" />
                                                    </a>
                                                </div>
                                                <div class="details">
                                                    <a class="grid-view-item__title" href="@Url.Action("Singlepage", "Home", new { @id = @item.P_ID})">
 @item.P_Name@item.P_Name
                                                    </a>
                                                    <div class="grid-view-item__meta">
                                                        <span class="product-price__price">
                                                            <span class="money">Rs @item.P_Discount.00</span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-md-9 col-lg-9 main-col">
                <div class="category-description">
                    <h3>Category Description</h3>
                    <p>
                        The clothes a person wears tells us many things: their status in life, for example, or their cultural affiliation or identity. They can tell us what era they live in, and even a person’s current state of mind or intent. Understanding how to describe clothing in a story well will help you create fuller, richer character portraits.
                    </p>
                </div>
                <hr>
                <div class="productList product-load-more">
                    
                    <button type="button" class="btn btn-filter d-block d-md-none d-lg-none">
                        Product
                        Filters
                    </button>
                    <div class="toolbar">
                        <div class="filters-toolbar-wrapper">
                            <div class="row">
                                <div class="col-4 col-md-4 col-lg-4 filters-toolbar__item collection-view-as d-flex justify-content-start align-items-center">
                                    <a href="shop-left-sidebar.html" title="Grid View"
                                       class="change-view change-view--active">
                                        <img src="/MainWebsite/assets/images/grid.jpg" alt="Grid" />
                                    </a>
                                </div>
                                <div class="col-4 col-md-4 col-lg-4 text-center filters-toolbar__item filters-toolbar__item--count d-flex justify-content-center align-items-center">
                                    <span class="filters-toolbar__product-count">Showing: @Session["total"]</span>
                                </div>
                                <div class="col-4 col-md-4 col-lg-4 text-right">
                                    <div class="filters-toolbar__item">
                                        <label for="SortBy" class="hidden">Sort</label>
                                        <select name="SortBy" id="SortBy"
                                                class="filters-toolbar__input filters-toolbar__input--sort">
                                            <option value="title-ascending" selected="selected">Sort</option>
                                            <option>Best Selling</option>
                                            <option>Alphabetically, A-Z</option>
                                            <option>Alphabetically, Z-A</option>
                                            <option>Price, low to high</option>
                                            <option>Price, high to low</option>
                                            <option>Date, new to old</option>
                                            <option>Date, old to new</option>
                                        </select>
                                        <input class="collection-header__default-sort" type="hidden"
                                               value="manual">
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="grid-products grid--view-items">
                        <div class="row">

                            @foreach (var item in Model)
                            {
                                <div class="col-6 col-sm-6 col-md-4 col-lg-3 item">
                                    <div class="product-image">
                                        <a href="@Url.Action("Singlepage", "Home", new { @id = @item.P_ID})">
                                            <img class="primary blur-up lazyload"
                                                 data-src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                 src="/MainWebsite/assets/images/product-images/@item.P_Pic" alt="image"
                                                 title="product" />
                                            <img class="hover blur-up lazyload"
                                                 data-src="/MainWebsite/assets/images/product-images/@item.P_Pic"
                                                 src="/MainWebsite/assets/images/product-images/@item.P_Pic" alt="image"
                                                 title="product" />
                                            <div class="product-labels"><span class="lbl on-sale">Sale</span></div>
                                        </a>
                                        <form class="variants add" action="#"
                                              onclick="window.location.href='@Url.Action("Singlepage", "Home", new { @id = @item.P_ID})'" method="post">
                                            <button class="btn btn-addto-cart" type="button">Add To Cart</button>
                                        </form>
                                    </div>
                                    <div class="product-details text-center">
                                        <div class="product-name">
                                            <a href="@Url.Action("Singlepage", "Home", new { @id = @item.P_ID})"> @item.P_Name</a>
                                        </div>
                                        <div class="product-price">
                                            <span class="old-price">Rs @item.P_Price.00</span>
                                            <span class="price">Rs @item.P_Discount.00</span>
                                        </div>
                                    </div>
                                </div>
                            }
                            </div>
                    </div>
                </div>
                <div class="infinitpaginOuter">
                    <div class="infinitpagin">
                        <a href="#" class="btn loadMore">Load More</a>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>