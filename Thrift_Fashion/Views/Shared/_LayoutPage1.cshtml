<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <title>@ViewBag.Title - Thrift Fashion</title>
    <link rel="shortcut icon" href="~/ExtraClasses/logo.png" />
    <meta name="description" content="description">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/MainWebsite/assets/css/plugins.css">
    <link rel="stylesheet" href="~/MainWebsite/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/MainWebsite/assets/css/style.css">
    <link rel="stylesheet" href="~/MainWebsite/assets/css/responsive.css">
</head>
<style>
    .logo:first-letter {
        font-size: 45px;
        color: #f73e5e;
        font-weight: bolder;
    }

    .logo {
        font-size: 20px;
    }
</style>
<body>
    <div class="pageWrapper">
        <div class="search">
            <div class="search__form">
                <form class="search-bar__form" action="#">
                    <button class="go-btn search__button" type="submit"><i class="icon anm anm-search-l"></i></button>
                    <input class="search__input" type="search" id="myInput" value="" placeholder="Search entire store..." aria-label="Search" autocomplete="off">
                </form>
                <button type="button" class="search-trigger close-btn"><i class="icon anm anm-times-l"></i></button>
            </div>
        </div>
        <div class="top-header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-10 col-sm-8 col-md-5 col-lg-4">
                        <p class="phone-no"><i class="anm anm-phone-s"></i> +92 333 2245310</p>
                    </div>
                    <div class="col-sm-4 col-md-4 col-lg-4 d-none d-lg-none d-md-block d-lg-block">
                        <div class="text-center">
                            <p class="top-header_middle-text"> Worldwide Express Shipping</p>
                        </div>
                    </div>
                    <div class="col-2 col-sm-4 col-md-3 col-lg-4 text-right">
                        <span class="user-menu d-block d-lg-none">
                            <i class="anm anm-user-al"
                               aria-hidden="true"></i>
                        </span>
                        @if (Session["UserLogin"] == null)
                        {
                            <ul class="customer-links list-inline">
                                <li><a href="@Url.Action("Login","Home")">Login</a></li>
                                <li><a href="@Url.Action("Login","Home")">Create Account</a></li>
                            </ul>
                        }
                        else
                        {
                    <ul class="customer-links list-inline">
                        <li><p><strong>Welcome Mr. @Session["Name"]</strong></p></li>
                        <li><a href="@Url.Action("MyAccount","Home")">My Account</a></li>
                        <li><a href="@Url.Action("Logout")">Logout</a></li>
                    </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="header-wrap animated d-flex">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="logo col-md-2 col-lg-2 d-none d-lg-block">
                        <a href="@Url.Action("Index","Home")" style="text-decoration:none;">
                            <img src="~/ExtraClasses/logo.png" />
                        </a>
                    </div>


                    <div class="col-2 col-sm-3 col-md-3 col-lg-8">
                        <div class="d-block d-lg-none">
                            <button type="button"
                                    class="btn--link site-header__menu js-mobile-nav-toggle mobile-nav--open">
                                <i class="icon anm anm-times-l"></i>
                                <i class="anm anm-bars-r"></i>
                            </button>
                        </div>

                        <nav class="grid__item" id="AccessibleNav">

                            <ul id="siteNav" class="site-nav medium center hidearrow">
                                <li class="lvl1 parent megamenu"><a href="@Url.Action("Index","Home")">Home</a></li>
                                <li class="lvl1 parent megamenu"><a href="@Url.Action("Shop","Home")">Shop</a></li>
                                <li class="lvl1 parent dropdown"><a href="@Url.Action("Collection","Home")">Collection</a></li>

                                <li class="lvl1 parent dropdown"><a href="@Url.Action("Contact","Home")">Contact Us</a>
                                <li class="lvl1 parent dropdown">
                                    <a href="@Url.Action("About","Home")">About Us</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                    <div class="col-6 col-sm-6 col-md-6 col-lg-2 d-block d-lg-none mobile-logo">
                        <div class="logo col-md-2 col-lg-2 d-none d-lg-block">
                            <a href="@Url.Action("Index","Home")" style="text-decoration:none;">
                                <img src="~/ExtraClasses/logo.png" />
                            </a>
                        </div>
                    </div>
                    <div class="col-4 col-sm-3 col-md-3 col-lg-2">
                        <div class="site-cart">
                            <a href="@Url.Action("Cart","Home")" title="Cart">
                                <i class="icon anm anm-bag-l" style="font-size:20px; text-decoration:none "></i>
                                <span id="CartCount" class="site-header__cart-count"
                                      data-cart-render="item_count">@Session["num"]</span>
                                </a>
                            </div>
                            <div class="site-header__search">
                                <button type="button" class="search-trigger"><i class="icon anm anm-search-l"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mobile-nav-wrapper" role="navigation">
                <div class="closemobileMenu"><i class="icon anm anm-times-l pull-right"></i> Close Menu</div>
                <ul id="MobileNav" class="mobile-nav">


                    <li class="lvl1 parent megamenu"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="lvl1 parent megamenu"><a href="@Url.Action("Shop","Home")">Shop</a></li>
                    <li class="lvl1 parent megamenu"><a href="@Url.Action("Category","Home")">Category</a></li>
                    <li class="lvl1 parent dropdown"><a href="@Url.Action("Colloection","Home")">Collection</a></li>

                    <li class="lvl1 parent dropdown"><a href="@Url.Action("Contact","Home")">Contact Us</a>
                    <li class="lvl1 parent dropdown"><a href="@Url.Action("About","Home")">About Us</a>

            </div>
            @RenderBody()

            <div class="site-footer">
                <div class="container">

                    <div class="footer-top">
                        <div class="row">
                            <div class="col-12 col-sm-12 col-md-3 col-lg-3 footer-links">
                                <h4 class="h4">Quick Shop</h4>
                                <ul>
                                    <li><a href="@Url.Action("SingleCollection", "Home",new{@name = "Women" })">Women</a></li>
                                    <li><a href="@Url.Action("SingleCollection", "Home",new{@name = "Men" })">Men</a></li>
                                    <li><a href="@Url.Action("SingleCollection", "Home",new{@name = "Kids" })">Kids</a></li>
                                    <li><a href="@Url.Action("SingleCollection", "Home",new{@name = "Shoes" })">Sportswear</a></li>
                                    <li><a href="@Url.Action("SingleCollection", "Home",new{@name = "Bags" })">Bags</a></li>
                                </ul>
                            </div>
                            <div class="col-12 col-sm-12 col-md-3 col-lg-3 footer-links">
                                <h4 class="h4">Informations</h4>
                                <ul>
                                    <li><a href="@Url.Action("About", "Home")">About us</a></li>
                                    <li><a href="@Url.Action("Shop", "Home")">Shop</a></li>
                                    <li><a href="@Url.Action("Index", "Home")">Privacy policy</a></li>
                                    <li><a href="@Url.Action("Index", "Home")">Terms &amp; condition</a></li>
                                    @if (Session["UserLogin"] == null)
                                    {
                                        <li><a href="@Url.Action("Login", "Home")">My Account</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="@Url.Action("MyAccount", "Home")">My Account</a></li>
                                    }
                                </ul>
                            </div>
                            <div class="col-12 col-sm-12 col-md-3 col-lg-3 footer-links">
                                <h4 class="h4">Customer Services</h4>
                                <ul>
                                    <li><a href="@Url.Action("Index", "Home")">Request Personal Data</a></li>
                                    <li><a href="@Url.Action("Index", "Home")">FAQ's</a></li>
                                    <li><a href="@Url.Action("Index", "Home")">Contact Us</a></li>
                                    <li><a href="@Url.Action("Index", "Home")">Orders and Returns</a></li>
                                    <li><a href="@Url.Action("Index", "Home")">Support Center</a></li>
                                </ul>
                            </div>
                            <div class="col-12 col-sm-12 col-md-3 col-lg-3 contact-box">
                                <h4 class="h4">Contact Us</h4>
                                <ul class="addressFooter">
                                    <li>
                                        <i class="icon anm anm-map-marker-al"></i>
                                        <p>Aptech Metro Star Gate,<br>Shahr-E-Faisal, KHI</p>
                                    </li>
                                    <li class="phone">
                                        <i class="icon anm anm-phone-s"></i>
                                        <p>(+92) 333 224 5310</p>
                                    </li>
                                    <li class="email">
                                        <i class="icon anm anm-envelope-l"></i>
                                        <p>MSG-ALYNX@gmail.com</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <div class="footer-bottom">
                        <div class="row">

                            <div class="col-12 col-sm-12 col-md-6 col-lg-6 order-1 order-md-0 order-lg-0 order-sm-1 copyright text-sm-center text-md-left text-lg-left">
                                <span></span> <a href="@Url.Action("Index", "Home")">MSG - ALYNX</a>
                            </div>

                            <div class="col-12 col-sm-12 col-md-6 col-lg-6 order-0 order-md-1 order-lg-1 order-sm-0 payment-icons text-right text-md-center">
                                <ul class="payment-icons list--inline">
                                    <li><i class="icon fa fa-cc-visa" aria-hidden="true"></i></li>
                                    <li><i class="icon fa fa-cc-mastercard" aria-hidden="true"></i></li>
                                    <li><i class="icon fa fa-cc-discover" aria-hidden="true"></i></li>
                                    <li><i class="icon fa fa-cc-paypal" aria-hidden="true"></i></li>
                                    <li><i class="icon fa fa-cc-amex" aria-hidden="true"></i></li>
                                    <li><i class="icon fa fa-credit-card" aria-hidden="true"></i></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <span id="site-scroll"><i class="icon anm anm-angle-up-r"></i></span>
</body>
</html>
<script src="~/MainWebsite/assets/js/vendor/jquery-3.3.1.min.js"></script>
<script src="~/MainWebsite/assets/js/vendor/jquery.cookie.js"></script>
<script src="~/MainWebsite/assets/js/vendor/modernizr-3.6.0.min.js"></script>
<script src="~/MainWebsite/assets/js/vendor/wow.min.js"></script>
<script src="~/MainWebsite/assets/js/bootstrap.min.js"></script>
<script src="~/MainWebsite/assets/js/plugins.js"></script>
<script src="~/MainWebsite/assets/js/popper.min.js"></script>
<script src="~/MainWebsite/assets/js/lazysizes.js"></script>
<script src="~/MainWebsite/assets/js/main.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script>
    function addtocart(P_ID){
    $.ajax({
         url: "@Url.Action("addtocart", "Home")",
                              data: { id : P_ID },
                             type: "POST",
                            dataType: "json",

        success: function (res) {
            console.log(res);
            document.getElementById("CartCount").innerHTML = res.length;
        }


    });
    }

    function increse_pro_quantity(P_ID){
    $.ajax({
         url: "@Url.Action("cartincrese", "Home")",
                              data: { id : P_ID },
                             type: "POST",
                            dataType: "json",

        success: function (res) {
            document.getElementsByClassName("inc_count")[index].innerHTML = res;
                        }


    });
    }
    function dcs_pro_quantity(P_ID){
    $.ajax({
         url: "@Url.Action("cartdcs", "Home")",
                              data: { id : P_ID },
                             type: "POST",
                            dataType: "json",

        success: function (res) {
            document.getElementsByClassName("dec_count")[Index].innerHTML = res;
                        }


    });
    }

    
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable #test").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>