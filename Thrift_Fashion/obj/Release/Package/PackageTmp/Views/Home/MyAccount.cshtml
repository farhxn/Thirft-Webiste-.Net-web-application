@model IEnumerable<Thrift_Fashion.Models.Billing>
@{
    ViewBag.Title = "MyAccount";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: fafa;
    }

    font-face {
        font-family: 'fafa';
        src: url(font.ttf);
    }

    .banner {
        height: 300px;
        background: #1d2125;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .banner h3 {
            color: white;
            font-size: 40px;
            letter-spacing: 2px;
        }

    .custom-container {
        padding: 100px 40px;
    }

    table {
        margin: 40px 0px;
    }

    th, td, tr {
        border: 1px solid #f6f6f6;
        padding: 20px;
        background-color: #f6f6f6;
    }

    .cust-card {
        width: 200px;
        height: 200px;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.25);
        padding: 30px;
    }
</style>

<div class="banner">
    <h3>My Profile</h3>
</div>


<div class="custom-container">
    <h3>Account Billing</h3>
    <hr>
    Order History

    <div class="custom-row">
        <div class="col">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>E mail</th>
                        <th>City</th>
                        <th>Postal Code</th>
                        <th>Total</th>
                        <th>Address</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.B_Name</td>
                            <td>@item.B_email</td>
                            <td>@item.B_city</td>
                            <td>@item.B_Postal</td>
                            <td>Rs @item.B_Total</td>
                            <td>@item.B_Address</td>
                        <td><a class="text-danger" href="@Url.Action("BillRemove","Home",new {@id = item.B_id})" style="text-decoration:  none; font-weight: bold; font-family:'Agency FB' ">Cancel your order </a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
